<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:theme="@android:style/Theme.Black.NoTitleBar"

    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingTop="8dp"
    android:paddingBottom="8dp"
    android:paddingLeft="8dp"
    android:paddingRight="8dp"
    tools:context="ru.narod.nod.fifteen.MainActivity"
    android:orientation="horizontal"
    android:id="@+id/tableField"
    android:background="@drawable/wooden6land"
    >

    <TableLayout
        android:layout_height="match_parent"
        android:layout_width="281dp"
        android:layout_marginLeft="10dp">

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.6"
            android:layout_marginTop="0dp"
            android:id="@+id/row0"
            android:orientation="horizontal">

            <ImageView
                android:text="@string/_1"

                android:id="@+id/btn1"
                android:layout_column="0"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:layout_width="match_parent"

                />
            <ImageView
                android:text="@string/_2"

                android:id="@+id/btn2"
                android:layout_column="1"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                />
            <ImageView
                android:text="@string/_3"

                android:id="@+id/btn3"
                android:layout_column="2"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                />
            <ImageView
                android:text="@string/_4"

                android:id="@+id/btn4"
                android:layout_column="3"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                />
        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.6"
            android:id="@+id/row1"
            android:orientation="horizontal">

            <ImageView
                android:text="@string/_5"

                android:id="@+id/btn5"
                android:layout_column="0"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                />

            <ImageView
                android:text="@string/_6"

                android:id="@+id/btn6"
                android:layout_column="1"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                />

            <ImageView
                android:text="@string/_7"

                android:id="@+id/btn7"
                android:layout_column="2"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                />
            <ImageView
                android:text="@string/_8"

                android:id="@+id/btn8"
                android:layout_column="3"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                />
        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.6"
            android:id="@+id/row2"
            android:orientation="horizontal">

            <ImageView
                android:text="@string/_9"

                android:id="@+id/btn9"
                android:layout_column="0"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                />
            <ImageView
                android:text="@string/_10"

                android:id="@+id/btn10"
                android:layout_column="1"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                />
            <ImageView
                android:text="@string/_11"

                android:id="@+id/btn11"
                android:layout_column="2"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                />
            <ImageView
                android:text="@string/_12"

                android:id="@+id/btn12"
                android:layout_column="3"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                />
        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.6"
            android:id="@+id/row3"
            android:orientation="horizontal">

            <ImageView
                android:text="@string/_13"

                android:id="@+id/btn13"
                android:layout_column="0"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                />
            <ImageView
                android:text="@string/_14"

                android:id="@+id/btn14"
                android:layout_column="1"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                />
            <ImageView
                android:text="@string/_15"

                android:id="@+id/btn15"
                android:layout_column="2"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                />
            <ImageView
                android:text="@string/empty"

                android:id="@+id/btn16"
                android:layout_column="3"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                />
        </TableRow>
    </TableLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="51dp"
            android:text="@string/time"
            android:id="@+id/tvFieldTime"
            android:textSize="30sp"
            android:textColor="#604d00"
            android:gravity="center_vertical|center_horizontal"
            android:layout_gravity="left|top"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="51dp"
            android:id="@+id/timerValue"
            android:layout_gravity="right|top"
            android:textIsSelectable="false"
            android:textStyle="normal"
            android:enabled="true"
            android:textColor="#604d00"
            android:textSize="30sp"
            android:layout_marginLeft="30dp"
            android:gravity="center_vertical|center_horizontal" />

        <Chronometer
            android:layout_width="match_parent"
            android:layout_height="51dp"
            android:id="@+id/chronometer"
            android:layout_gravity="center_horizontal|top"
            android:format="MM:SS"
            android:textIsSelectable="false"
            android:textStyle="normal"
            android:enabled="true"
            android:textColor="#604d00"
            android:textSize="30sp"
            android:gravity="center_vertical|center_horizontal"
            android:visibility="invisible" />

        <com.google.android.gms.ads.AdView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/adViewField"
            android:layout_gravity="bottom|fill_horizontal"
            ads:adSize="BANNER"
            ads:adUnitId="@string/banner_home_footer">
        </com.google.android.gms.ads.AdView>

    </LinearLayout>
</LinearLayout>
