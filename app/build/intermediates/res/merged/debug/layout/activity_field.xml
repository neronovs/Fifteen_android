    <TableRow
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0.6"
        android:id="@+id/row3"
        android:orientation="horizontal">

        <ImageView
            android:text="@string/_13"

            android:id="@+id/btn13"
            android:layout_column="0"
