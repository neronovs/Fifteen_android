<?xml version="1.0" encoding="utf-8"?>
<GridLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:theme="@android:style/Theme.Holo.Light.NoActionBar"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="ru.narod.nod.fifteen.MainActivity"
    android:orientation="horizontal"
    android:background="@drawable/hohl4land"
    android:alpha="50">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/the_fifteen"
        android:id="@+id/tvHeader"
        android:textSize="50sp"
        android:layout_gravity="center_horizontal"
        android:textColor="#462f00"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/button12"
        android:layout_alignStart="@+id/button12"
        android:layout_row="0"
        android:layout_column="1"
        android:textAlignment="center"
        />

    <com.google.android.gms.ads.AdView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/adViewMain"
        android:layout_gravity="center_horizontal|top"
        ads:adSize="BANNER"
        ads:adUnitId="@string/banner_home_footer"
        android:layout_marginTop="20dp"
        android:layout_row="3"
        android:layout_column="0"
        android:layout_columnSpan="2"
        android:layout_margin="0dp"
        android:layout_marginBottom="0dp"
        android:layout_marginEnd="0dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="0dp"
        android:layout_marginStart="0dp">

    </com.google.android.gms.ads.AdView>

    <Button
        android:layout_width="247dp"
        android:layout_height="50dp"
        android:text="@string/high_scores"
        android:textSize="40sp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/btn_hohl2_light"
        android:textColor="#775100"
        android:layout_below="@+id/tvHeader"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="0dp"
        android:layout_marginTop="10dp"
        android:layout_row="1"
        android:layout_column="1"
        android:layout_margin="0dp"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginStart="0dp"
        android:id="@+id/btnHS"/>

    <Button
        android:layout_height="50dp"
        android:text="@string/cont"
        android:textSize="40sp"
        android:id="@+id/btnContinue"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/btn_hohl2_light"
        android:textColor="#775100"
        android:layout_width="247dp"
        android:layout_marginTop="10dp"
        android:layout_alignTop="@+id/button12"
        android:layout_toStartOf="@+id/button15"
        android:layout_row="0"
        android:layout_column="0"
        android:layout_margin="0dp"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="0dp"
        android:layout_marginStart="0dp"
        android:textAlignment="center"/>

    <Button
        android:layout_width="251dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:text="@string/exit"
        android:textSize="40sp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/btn_hohl2_light"
        android:textColor="#775100"
        android:layout_below="@+id/button13"
        android:layout_alignEnd="@+id/tvHeader"
        android:layout_marginEnd="0dp"
        android:layout_row="2"
        android:layout_column="1"
        android:layout_margin="0dp"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginStart="0dp"
        android:id="@+id/btnExit"/>

    <Button
        android:layout_width="245dp"
        android:layout_height="50dp"
        android:text="@string/new_game"
        android:textSize="40sp"
        android:id="@+id/btnStart"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/btn_hohl2_light"
        android:textColor="#775100"
        android:layout_marginEnd="0dp"
        android:layout_alignParentTop="true"
        android:layout_alignEnd="@+id/button13"
        android:layout_marginTop="10dp"
        android:layout_row="1"
        android:layout_column="0"
        android:layout_margin="0dp"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="0dp"
        android:layout_marginStart="0dp"/>

    <Button
        android:layout_width="245dp"
        android:layout_height="50dp"
        android:text="@string/rules"
        android:textSize="40sp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/btn_hohl2_light"
        android:textColor="#775100"
        android:layout_marginTop="10dp"
        android:elevation="0dp"
        android:layout_margin="0dp"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="0dp"
        android:layout_marginStart="0dp"
        android:layout_row="2"
        android:layout_column="0"
        android:id="@+id/btnRules"/>


</GridLayout>
